@using InstrumentService_Utility;
@model InstrumentService.Models.Product
<div class="col-lg-4 col-md-6 pb-4 filter @Model.Category.Name.Replace(' ','_') ">
    <!-- Card -->
    <div class="card bg-white rounded shadow-sm" style="border: 1px solid #222">
        <div class="card-body p-3 row">
            <div class="col-7">
                <label class="float-start">@Model.Name</label>
            </div>
            <div class="col-5">
                <label class="float-end"><span class="text-primary h5">@string.Format("{0:N0} ₽", @Model.Price)</span> / за единицу</label>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <img class="card-img-top img-fluid d-block my-3 mx-auto" src="@WC.ImagePath@Model.Image" alt="Card image cap" style="height: 250px; object-fit: cover;">
        </div>
        <div class="card-body p-1 px-3 row">
            <div class="col-6">
                <span class="badge p-2 border w-100 text-dark" style="background-color: lavenderblush;">@Model.Category.Name</span>
            </div>
            <div class="col-6 border-0">
                <span class="badge p-2 border w-100 text-dark" style="background-color: aliceblue;">@Model.ApplicationType.Name</span>
            </div>
            <div class="col-12 pt-2" style="font-size: 13px; text-align:justify;">
                <p>@Model.ShortDescription</p>
            </div>
            <div class="col-12 p-1">
                <a asp-controller="Home" asp-action="Details" asp-route-id= "@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height: 40px;">Подробнее</a>
            </div>
        </div>
    </div>
</div>

