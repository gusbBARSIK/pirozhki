@using InstrumentService_Utility;
@model InstrumentService.Models.ViewModels.DetailsVM

<div class="container mt-4">
    <form method="post">
        <input asp-for="@Model.Product.Id" hidden />
        <div class="container backgroundWhite pt-4">
            <div class="card border rounded">
                <div class="card-header bg-dark text-light container-fluid" style="border-radius: 0px;">
                    <div class="row">
                        <div class="col-12 col-md-6">
                            <h1 class="text-white">@Model.Product.Name</h1>
                        </div>
                        <div class="col-12 col-md-6 text-md-end">
                            <h1 class="text-primary">@string.Format("{0:N0} ₽", @Model.Product.Price)</h1>
                        </div>
                    </div>
                </div>
                @*                <div class="card-header bg-dark text-light">
                <div class="col-12 col-md-6">
                <h1 class="text-white">Name</h1>
                </div>
                <div class="col-12 col-md-6 text-md-end">
                <h1 class="text-warning">Price</h1>
                </div>
                </div>*@
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="@WC.ImagePath@Model.Product.Image" class="img-fluid rounded" alt="Product Image">
                        </div>
                        <div class="col-12 col-lg-8">
                            <div class="row pl-3">
                                <div class="col-12">
                                    <span class="badge p-3 border text-black" style="background-color:lavenderblush">@Model.Product.Category.Name</span>
                                    <span class="badge p-3 border text-black" style="background-color:azure">@Model.Product.ApplicationType.Name</span>
                                    <h3 class="text-success"></h3>
                                    <p class="text-secondary">@Html.Raw(Model.Product.Description)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1">
                            <a asp-action = "Index" class="btn btn-success btn-lg form-control text-white" style="height:50px;">Назад</a>
                        </div>
                        <div class="col-12 col-md-6">
                            @if (Model.ExistsInCart)
                            {
                                <a asp-action = "RemoveFromCart" asp-route-id ="@Model.Product.Id" class="btn btn-warning btn-lg form-control text-black" style="height:50px;">Удалить из корзины</a>
                            }
                            else
                            {
                                <button type="submit" asp-route-id="@Model.Product.Id" class="btn btn-primary btn-lg form-control text-white" style="height:50px;">Добавить в корзину</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>