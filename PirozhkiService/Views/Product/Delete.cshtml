@using InstrumentService_Utility;
@model InstrumentService.Models.Product



<form method="post" >

        <input asp-for="Id" hidden />


    <div class="border p-3 bg-white">

        <div class="mb-3 row">
            <h2 class="text-primary pl-3">Удаление товара</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="Name" class="col-form-label">Название</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="Price" class="col-form-label">Цена</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control " />
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="Description" class="col-form-label">Описание</label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Description" class="form-control summernote"></textarea>

                    </div>
                </div>



                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="CategoryId" class="col-4 col-form-label">Список категорий</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category.Name" disabled class="form-control " />
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="ApplicationTypeId" class="col-4 col-form-label">Список категорий</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationType.Name" disabled class="form-control " />
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-8 offset-4 row">
                        <div class="col">

                                <button type="submit" class="btn btn-danger w-100">Удалить</button>

                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-secondary w-100"><i class="fa-solid fa-right-from-bracket"></i>Назад</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
                @if (@Model.Id != 0)
                {
                    <img src="@WC.ImagePath@Model.Image" width="100%" style="border-radius:5px; border:1px solid #bbb" />
                }
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250
                
            });
        });
    </script>
}