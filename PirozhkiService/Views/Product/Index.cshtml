@model IEnumerable<InstrumentService.Models.Product>

<div class="container p-3 bg-white">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список товаров</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fa-solid fa-circle-plus"></i>&nbsp; Создать новый товар
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <style>
            /* Дополнительный стиль для уменьшения отступов в ячейках */
            .table td, .table th {
                padding: 0.3rem;
            }
        </style>

        <table class="table table-bordered table-striped" style="width: 100%; word-wrap: break-word;">
            <thead>
                <tr>
                    <th scope="col" style="width: 20%;">
                        Название товаров
                    </th>
                    <th scope="col" style="width: 15%;">
                        Цена
                    </th>
                    <th scope="col" style="width: 30%;">
                        Категория
                    </th>
                    <th scope="col" style="width: 25%;">
                        Тип использования
                    </th>
                    <th scope="col" style="width: 10%;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.Price</td>
                        <td>@obj.Category.Name</td>
                        <td>@obj.ApplicationType.Name</td>
                        <td class="text-center">
                            <div class="d-grid gap-2 d-md-block">
                                <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-success text-white text-decoration-none" role="button">
                                    <i class="fa-solid fa-file-pen"></i>
                                </a>
                                <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger text-white text-decoration-none" role="button">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p>Товаров не существует</p>
    }
</div>
